{
  "name": "codex-cryptica",
  "private": true,
  "packageManager": "npm@11.6.2",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "npm run test:e2e --workspace=web",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,svelte}": [
      "eslint --fix"
    ],
    "*.{ts,tsx,md,svelte}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "latest",
    "eslint-plugin-svelte": "^3.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "latest",
    "svelte-eslint-parser": "^1.4.1",
    "turbo": "^2.8.2",
    "typescript": "latest"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
